
function largestOfFour(arr) {

  var results = [];
  // this is barely readable to me just a few days later.
  // haha.
  
  for (var i =  0; i <arr.length;i++) {
    var max = 0;
    for (var sb = 0; sb < arr[i].length; sb++) {
      if (arr[i][sb] > max) {
        max = arr[i][sb];
      }
    }
    results[i] = max;
  }// end iteration of initial loop. 1 number for every array 
return results;
}
largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]);
